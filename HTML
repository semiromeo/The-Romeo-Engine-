    function generarAddon() {
        const descripcion = document.getElementById('descripcion-addon').value;
        const resultado = document.getElementById('resultado-ia');

        if (tickets < 10) {
            alert("‚ùå ¬°No tienes suficientes Tickets! Tala m√°s madera viendo videos.");
