    <script>
        let coins = 0; let tickets = 0;
        function recompensa() {
            alert("üì∫ Cargando anuncio de la Locomotora...");
            setTimeout(() => {
                tickets += 1; coins += 50;
                document.getElementById('coins').innerText = coins;
                document.getElementById('tickets').innerText = tickets;
                alert("¬°Ticket de Madera recolectado! ü™µ");
            }, 1500);
        }
        function generarAddon() {
            if(tickets < 10) { alert("‚ùå Necesitas 10 Tickets de Madera."); return; }
            tickets -= 10; document.getElementById('tickets').innerText = tickets;
            document.getElementById('resultado-ia').innerHTML = "üõ†Ô∏è ¬°IA TRABAJANDO...!";
            setTimeout(() => { document.getElementById('resultado-ia').innerHTML = "‚úÖ ADDON LISTO EN TU CARPETA VIRTUAL."; }, 2000);
