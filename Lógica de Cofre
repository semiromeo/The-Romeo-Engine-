// Simulación de creación de comportamiento avanzado
function inyectarLogicaCofre(zip) {
    const lockSystem = {
        "minecraft:entity": {
            "description": { "identifier": "pokestill:safe_chest" },
            "components": {
                "minecraft:inventory": { "container_type": "container", "inventory_size": 27 },
                "minecraft:interact": { "interactions": [ { "on_interact": { "filters": { "test": "has_tag", "value": "admin" } } } ] }
            }
        }
    };
    zip.file("BP/entities/safe_chest.json", JSON.stringify(lockSystem, null, 2));
}
